@{
    ViewBag.Title = "EmployeeLogs";
}

<html>
<head>    
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card card-flush">
                    <div class="card-header pt-7">
                        <table style="width:100%">
                            <tr>                               
                                <td> <h2 class="pt-2">Employee Logs</h2></td>

                                <td style="text-align:right;">
                                </td>

                            </tr>
                        </table>
                        
                    </div>
                    <div class="card-body pt-7 table-responsive">
                        <table class="table table-bordered">
                            <tr class="responsive-font-myclass">
                                <th><center>SrNo</center></th>
                                <th><center>Firstname</center></th>
                                <th><center>Middlename</center></th>
                                <th><center>Lastname</center></th>
                                <th><center>MobileNo</center></th>
                                <th><center>Gender</center></th>                               
                                <th><center>Action</center></th>
                            </tr>

                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>

                                    <td><center>@Model.Rows[i]["SrNo"]</center></td>
                                    <td><center>@Model.Rows[i]["Firstname"]</center></td>
                                    <td><center>@Model.Rows[i]["Middlename"]</center></td>
                                    <td><center>@Model.Rows[i]["Lastname"]</center></td>
                                    <td><center>@Model.Rows[i]["MobileNo"]</center></td>
                                    <td><center>@Model.Rows[i]["Gender"]</center></td>
                                    <td>
                                        <center>
                                            <a href="@Url.Action("DeleteEmployee", "Home", new { No = @Model.Rows[i]["SrNo"] })" class="btn btn-danger btn-sm" onclick="return confirm('Are You Sure')">
                                                Delete
                                            </a>
                                            <a href="@Url.Action("EditEmployee", "Home", new { uniqueid = @Model.Rows[i]["SrNo"] })" class="btn btn-success btn-sm">
                                                Edit
                                            </a>
                                            
                                        </center>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>








